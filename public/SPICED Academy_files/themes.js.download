document.getElementById('themes').onchange = ({target}) => {
    const {value} = target.options[target.selectedIndex];
    document.documentElement.className = value;
    fetch(`/${target.form.cohort.value}/theme/${value}`, {
        method: 'post',
        headers: {
            'xsrf-token': target.form._csrf.value
        }
    });
};
